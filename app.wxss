.page_height {
    width: 100%;
    height: 128rpx;
}

/* 遮罩层 */

.mask {
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    position: fixed;
    left: 0;
    top: 0;
    z-index: 99;
}

/* 没有数据 */

.no_data {
    width: 100%;
    padding-top: 155rpx;
}

.no_data .no_data_img {
    width: 165rpx;
    height: 140rpx;
    margin: 0 auto;
    margin-bottom: 43rpx;
}

.no_data .no_data_txt {
    font-size: 26rpx;
    color: #c0c4cc;
    text-align: center;
    margin-bottom: 100rpx;
}

.no_data .no_data_btn {
    width: 290rpx;
    height: 70rpx;
    text-align: center;
    line-height: 70rpx;
    border: 2rpx solid #046dfe;
    border-radius: 45rpx;
    font-size: 28rpx;
    color: #046dfe;
    padding: 0;
    font-weight: 400;
}
