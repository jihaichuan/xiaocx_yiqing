/**app.wxss**/

view, text, label, input, navigator, button, textarea {
    padding: 0;
    margin: 0;
    border: none;
    font-family: "PingFangSC-Regular, Monaco, Helvetica Neue";
}

image {
    width: 100%;
    height: 100%;
    display: block;
}

/* input {
    font-family: "PingFangSC-Medium" !important;
} */

button {
    border: none;
}

button::after {
    display: none;
}

/*文字加粗  */
.b {
    font-family: "PingFangSC-Medium";
}

/* button 点击效果 */

.btn-class {
    opacity: 0.7;
}

.page_title {
    width: 100%;
    height: 128rpx;
    position: fixed;
    top: 0;
    left: 0;
    /* background: #fff; */
    z-index: 9;
    transition: all 0.2s;
}

.page_title_active {
    width: 100%;
    height: 128rpx;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 9;
    background: #046dfe;
    color: #000;
}

.page_title .page_return {
    position: absolute;
    width: 21rpx;
    height: 36rpx;
    /* left: 20rpx; */
    padding: 20rpx 40rpx 20rpx 20rpx;
    /* top: 48.5%; */
    z-index: 99999;
}

.page_title .page_txt {
    width: 100%;
    height: 128rpx;
    line-height: 158rpx;
    text-align: center;
    font-size: 37rpx;
    color: #fff;
}

