/* pages/index/employee_list.wxss */

page {
    background: #f9f9f9;
}

.list_tit {
    width: 100%;
    height: 83rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 26rpx;
    color: #959a9f;
    background: #fff;
    border-bottom: 1rpx solid #dedede;
}

.list_tit .tit_left {
    margin-left: 37rpx;
}

.list_tit .tit_right {
    margin-right: 37rpx;
}

.people_list {
    padding: 0 35rpx;
    background: #fff;
}

.people_list .people_li {
    display: flex;
    justify-content: space-between;
    font-size: 26rpx;
    color: #000;
    padding: 36rpx 0;
    border-bottom: 1rpx solid #dedede;
}

.people_list .people_li:last-child {
    border: none;
}

.people_list .people_li .li_right_problem {
    font-size: 26rpx;
    color: #e6a23c;
    max-width:312rpx;
    text-align: right;
}
